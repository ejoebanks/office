<br/>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-xs-6">
                <h5><span class="glyphicon glyphicon-pencil"></span> Inventory Cart</h5>
              </div>
              <div class="col-xs-6">
                <a href="/inventory"><button type="button" class="btn btn-primary btn-sm btn-block">
                  <span class="glyphicon glyphicon-share-alt"></span> View Inventory
                </button></a>
              </div>
            </div>
          </div>
        </div>

        <div class="panel-body">
          <% if @order_items.any? %>
            <% @order_items.each do |item| %>
            <% @rez = Cost.where(:supply_id => item.supply.suppliesid).select(:cost) %>
          <div class="row">
            <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
            </div>
            <div class="col-xs-4">
              <h4 class="product-name"><strong><%= item.supply.supplyname %></strong></h4><h4><small>Supply description</small></h4>
              <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Suppliers
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Supplier 1</a>
                <a class="dropdown-item" href="#">Supplier 2</a>
                <a class="dropdown-item" href="#">Supplier 3</a>
              </div>
            </div>
            </div>
            <div class="col-xs-6">
              <div class="col-xs-6 text-right">
                <h6><strong>$<%=number_with_precision("#{@rez.pluck(:cost).first}", :precision => 2) %> <span class="text-muted">x</span></strong></h6>
              </div>
              <div class="col-xs-4">
                <input type="text" class="form-control input-sm" value="<%= item.quantity %>">
              </div>
              <div class="col-xs-2">
                <button type="button" class="btn btn-link btn-xs">
                  <span class="glyphicon glyphicon-trash"><%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %> </span>
                </button>
              </div>
            </div>
          </div>
          <br/>
          <% end %>
          <hr>
          <hr>
          <div class="row">
            <div class="text-center">
              <div class="col-xs-9">
              </div>
              <div class="col-xs-3">
                <button type="button" class="btn btn-primary">
                  Update cart
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row text-center">
            <div class="col-xs-9">
              <h4 class="text-right">Total <strong>$<%=number_with_precision("#{current_order.subtotal}", :precision => 2) %>
</strong></h4>
            </div>
            <div class="col-xs-3">
              <button type="button" class="btn btn-success btn-block">
                Checkout
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="container">
  <br/><br/>
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <p id="shopcart">Your cart is empty.</p>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>
<% end %>
