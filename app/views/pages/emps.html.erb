<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Employees
                <small>Contact Information for staff</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active">Employees</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Location</th>
                <th>Phone Number</th>
                <th>Start Date</th>
              </tr>
            </thead>

            <tbody>

          <%
             @users.each do |x| %>
            <tr>
              <td><%= x.id %></td>
              <td><%= x.first_name %></td>
              <td><%= x.last_name %></td>
              <td><%= x.address %>, <%= x.city %>, <%= x.state %></td>
              <td><%= x.phonenumber %></td>
              <td><%= x.created_at %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
        </div>
    </div>
