<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Inventory
                <small>Stock & Orders</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active">Inventory</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Current Inventory</h2>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Supply ID</th>
                  <th>Supply Name</th>
                  <th>Quantity</th>
                  <% if current_user.privileges? %>
                  <th>Order</th>
                  <% end %>
                </tr>
              </thead>

              <tbody>

            <%
               @zz.each do |t| %>
              <tr>
                <td><%= t.supply_id %></td>
                <td><%= t.supplyname %></td>
                <td><%= t.quantity %></td>
                <% if current_user.privileges? %>
                <td><button type="button" class="btn btn-sm btn-success">Order More</button></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>


</p>
        </div>
    </div>
    <!-- /.row -->

    <!-- Team Members -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Recent Orders</h2>
        </div>


        <% @osInfo.each do |os| %>
        <div class="col-md-4 text-center">
            <div class="thumbnail">
                <img class="img-responsive" src="https://placehold.it/750x450" alt="">
                <div class="caption">
                    <h3><%= os.supplyname %><br>
                        <small>from <%= os.first_name + ' ' + os.last_name %></small>
                    </h3>
                    <p><%= os.quantity %> <%= os.supplyname %> from <%= os.name %> totaling $<%=os.totalcost %>0 on <%= os.created_at %>.</p>
                    <ul class="list-inline">
                        <li><a href="#"><i class="fa fa-2x fa-facebook-square"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-2x fa-linkedin-square"></i></a>
                        </li>
                        <li><a href="#"><i class="fa fa-2x fa-twitter-square"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <% end %>


    </div>
