<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Costs
          <small>Costs From Our Suppliers</small>
        </h1>
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Costs</li>
        </ol>
      </nav>
      </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Supply</th>
                <th>Supplier</th>
                <th>Cost</th>
              </tr>
            </thead>

            <tbody>

          <%
             @allCosts.each do |x| %>
            <tr>
              <td><%= x.id %></td>
              <td><%= x.supplyname %></td>
              <td><%= x.name %></td>
              <td><%= number_to_currency("#{x.cost}") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
        </div>
    </div>
