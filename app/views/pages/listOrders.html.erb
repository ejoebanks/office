<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Orders
          <small>All Orders Placed</small>
        </h1>
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Orders</li>
        </ol>
      </nav>
      </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Supply</th>
                <th>Employee</th>
                <th>Supplier</th>
                <th>Quantity</th>
                <th>Total Cost</th>
                <th>Date</th>
              </tr>
            </thead>

            <tbody>

          <%
             @all_orders.each do |x| %>
            <tr>
              <td><%= x.id %></td>
              <td><%= x.supplyname %></td>
              <td><%= x.first_name %> <%= x.last_name %></td>
              <td><%= x.supplier %></td>
              <td><%= x.quantity %></td>
              <td>$<%= number_with_precision("#{x.totalcost}", :precision => 2) %></td>
              <td><%= x.date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
        </div>
    </div>
